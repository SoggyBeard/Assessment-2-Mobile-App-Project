<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#AD00BCD4"
    tools:context=".activity_calendar">

    <TextView
        android:id="@+id/box1"
        android:layout_width="369dp"
        android:layout_height="71dp"
        android:layout_marginStart="24dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <ImageButton
        android:id="@+id/faceBtn1"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/crying_face" />


    <ImageButton
        android:id="@+id/faceBtn2"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/faceBtn1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pensive_face" />

    <ImageButton
        android:id="@+id/faceBtn3"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/faceBtn2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/neutral_face" />

    <ImageButton
        android:id="@+id/faceBtn4"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/faceBtn3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slightly_smiling_face" />

    <ImageButton
        android:id="@+id/faceBtn5"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/faceBtn4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smiling_face" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="362dp"
        android:layout_height="335dp"
        android:layout_marginTop="317dp"
        android:layout_marginBottom="76dp"
        android:background="#FFFFFF"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="233dp"
        android:layout_marginRight="233dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnCalendar2"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginTop="562dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/calendar1" />

    <ImageButton
        android:id="@+id/btnMood2"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginTop="562dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/mood_btn" />

    <ImageButton
        android:id="@+id/btnSleep2"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginTop="562dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/sleep_btn" />

    <EditText
        android:id="@+id/commentBox"
        android:layout_width="362dp"
        android:layout_height="74dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="14dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="12dp"
        android:text="Comment"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/commentBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="24dp"
        android:text="Start Sleep Time"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="60dp"
        android:text="End Sleep Time"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box1" />

    <Button
        android:id="@+id/chooseSleepStart"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:text="Select"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/box1" />

    <Button
        android:id="@+id/chooseSleepEnd"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:text="Select"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/chooseSleepStart" />

</androidx.constraintlayout.widget.ConstraintLayout>